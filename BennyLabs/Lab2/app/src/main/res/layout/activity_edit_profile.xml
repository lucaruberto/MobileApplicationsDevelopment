<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#4CAF50"
    android:backgroundTint="#77BD25"
    tools:context=".ShowProfileActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="404dp" />

    <ImageButton
        android:id="@+id/EditImage"
        android:layout_width="211dp"
        android:layout_height="177dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@android:drawable/ic_menu_camera" />

    <ScrollView
        android:id="@+id/EditScrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foregroundGravity="center"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:textAlignment="center"
            android:visibility="visible">

            <EditText
                android:id="@+id/EditNickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:allowUndo="true"
                android:background="@drawable/custom_input"
                android:minHeight="48dp"
                android:singleLine="true"
                android:paddingBottom="8dp"
                android:textAlignment="center"
                android:inputType="textPersonName"
                android:drawableStart="@drawable/baseline_person_24"
                android:hint="Nickname"
                android:text=""
                android:textSize="24dp" />

            <EditText
                android:id="@+id/EditFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical"
                android:layout_weight="1"
                android:allowUndo="true"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:foregroundGravity="center"
                android:gravity="center|center_vertical"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:singleLine="true"
                android:textAlignment="center"
                android:textSize="24dp"
                android:text="@string/fullname"
                android:hint="FullName"
                android:drawableStart="@drawable/baseline_person_24"
                android:background="@drawable/custom_input"

                />

            <EditText
                android:id="@+id/EditMail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical"
                android:layout_weight="1"
                android:allowUndo="true"
                android:ems="10"
                android:foregroundGravity="center"
                android:gravity="center|center_vertical"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:singleLine="true"

                android:textAlignment="center"
                android:textSize="24sp"
                android:text="@string/mail"
                android:hint="E-mail"
                android:drawableStart="@drawable/baseline_email_24"
                android:background="@drawable/custom_input"
                android:layout_marginTop="16dp"
                />

            <EditText
                android:id="@+id/EditBirth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical"
                android:layout_weight="1"
                android:allowUndo="true"
                android:ems="10"
                android:foregroundGravity="center"
                android:gravity="center|center_vertical"
                android:inputType="date"
                android:minHeight="48dp"
                android:singleLine="true"
                android:textAlignment="center"
                android:textSize="24sp"
                android:text="@string/birth"
                android:hint="BirthDate"
                android:drawableStart="@drawable/baseline_calendar_month_24"
                android:background="@drawable/custom_input"
                android:layout_marginTop="16dp"

                />

            <EditText
                android:id="@+id/EditSex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical"
                android:layout_weight="1"
                android:allowUndo="true"
                android:ems="10"
                android:foregroundGravity="center"
                android:gravity="center|center_vertical"
                android:minHeight="48dp"
                android:singleLine="true"
                android:textAlignment="center"
                android:textSize="24sp"
                android:text="@string/sex"
                android:hint="Sex"
                android:drawableStart="@drawable/baseline_man_4_24"
                android:background="@drawable/custom_input"
                android:layout_marginTop="16dp"/>

            <EditText
                android:id="@+id/EditCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical"
                android:layout_weight="1"
                android:allowUndo="true"
                android:ems="10"
                android:foregroundGravity="center"
                android:gravity="center|center_vertical"
                android:inputType="text"
                android:minHeight="48dp"
                android:textAlignment="center"
                android:textSize="24sp"
                android:text="@string/city"
                android:hint="City"
                android:drawableStart="@drawable/baseline_location_city_24"
                android:background="@drawable/custom_input"
                android:layout_marginTop="16dp"
                />

            <EditText
                android:id="@+id/EditSportslist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical"
                android:layout_weight="1"
                android:ems="10"
                android:foregroundGravity="center"
                android:gravity="center|center_vertical"
                android:inputType="text|textEmailAddress"
                android:minHeight="48dp"

                android:textAlignment="center"
                android:textSize="24sp"
                android:text="@string/sportlists"
                android:hint="SportsLists"
                android:drawableStart="@drawable/baseline_sports_martial_arts_24"
                android:background="@drawable/custom_input"
                android:layout_marginTop="16dp"/>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginTop="16dp"
                >

                <TextView
                    android:id="@+id/Reputation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reputation"
                    android:textColorHighlight="#000000"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/btn_star_big_on" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/btn_star_big_on" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/btn_star_big_on" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/btn_star_big_on" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/btn_star_big_on" />

            </TableRow>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>